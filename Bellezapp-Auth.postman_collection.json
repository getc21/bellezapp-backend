									"        console.log(\"Token de gerente guardado:\", jsonData.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"gerente1\",\n    \"email\": \"gerente1@bellezapp.com\",\n    \"firstName\": \"Carlos\",\n    \"lastName\": \"Rodríguez\",\n    \"password\": \"Manager123!\",\n    \"role\": \"manager\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
